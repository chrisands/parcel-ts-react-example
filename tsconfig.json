{
  "compilerOptions": {
    "target": "es5",
    "module": "esnext",
    "strict": false,
    "jsx": "react",
    "rootDirs": [
      "./**/src"
    ],
    "typeRoots": [
      "node_modules/@types",
      "./**/types.d.ts"
    ],
    "incremental": true,
    "experimentalDecorators": true,
    "lib": ["dom", "es2019"],
    "importHelpers": true,
    "moduleResolution": "node"
  },
  "include": [
    "./**/src"
  ]
}
